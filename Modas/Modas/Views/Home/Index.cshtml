@using Modas.ViewModels
@model EventListViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>MODAS</title>
    <link href="~/css/all.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet"/>
</head>
<body>
    <div class="container">
        <table class="table table-sm table-striped table-shadow">
            <thead class="bg-success text-white">
                <tr><th>Date</th><th>Time</th><th>Location</th></tr>
            </thead>
            <tbody>
                @foreach (var e in Model.Events)
                {
                    <tr>
                        <td>@String.Format("{0: ddd, MMM dd, yyyy}", e.TimeStamp)</td>
                        <td>@String.Format("{0:hh:mm tt}", e.TimeStamp)</td>
                        <td>@e.Location.Name</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row mb-3">
            <div class="col">
                <button disabled id="first" class="btn btn-outline-secondary" type="button" data-page="1">
                    <i class="fas fa-angle-double-left"></i>
                    <span class="d-none d-md-inline"> First</span>
                </button>
                <button disabled id="previous" class="btn btn-outline-secondary" type="button" data-page="@(Model.PageInfo.PreviousPage)">
                    <i class="fas fa-angle-left"></i>
                    <span class="d-none d-md-inline"> Prev</span>
                </button>
            </div>
            <div class="col text-center text-secondary">
                <span id="start">@(Model.PageInfo.EventRangeStart)</span>-<span id="end">@(Model.PageInfo.EventRangeEnd)</span>
                 of 
                <span id="total">@(Model.PageInfo.TotalEvents)</span>
            </div>
            <div class="col text-right">
                <button disabled id="next" class="btn btn-outline-secondary" type="button" data-page="@(Model.PageInfo.NextPage)">
                    <span class="d-none d-md-inline">Next </span>
                    <i class="fas fa-angle-right"></i>
                </button>
                <button disabled id="last" class="btn btn-outline-secondary" type="button" data-page="@(Model.PageInfo.TotalPages)">
                    <span class="d-none d-md-inline">Last </span>
                    <i class="fas fa-angle-double-right"></i>
                </button>
            </div>
        </div>
    </div>
    

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/modas.js"></script>
</body>
</html>
